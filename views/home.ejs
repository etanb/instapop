<% include header %>

<div id="popular-list" ng-controller="PopularListController">

  <div class="navbar navbar-fixed-top alt" data-spy="affix" data-offset-top="10">
    <div class="container">
      <div class="navbar-header">
        <a href="#" class="navbar-brand">Choose A User   <i class="fa fa-arrow-circle-right"></i></a>
      </div>
      <div class="navbar-collapse collapse" id="navbar">
        <ul ng-repeat="post in posts" class="nav navbar-nav">
            <pop-nav post="post"></pop-nav>
        </ul>
      </div>
     </div>
  </div>

	<button ng-click="loadPosts(); reloadCount = reloadCount + 1" ng-init="reloadCount=0">
	  Reload Data
	</button>

	<span>
	  You've reloaded the Instagram stream <strong> {{reloadCount}} </strong> times.
	</span>

	<div id="{{post.user.username}}" class="pop-image-container center-block" ng-repeat="post in posts">
    <span id="{{post.user.username + '-post-section'}}">
    	<pop-image post="post"></pop-image>
    	<pop-chart post="post"></pop-chart>
    </span>

    <span id="{{post.user.username + '-user-section'}}">
      <pop-user></pop-user>
    </span>
 	</div>
</div>

<% include footer %>